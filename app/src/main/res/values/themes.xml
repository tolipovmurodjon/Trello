<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Trello" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/trello_black</item>
        <item name="colorPrimaryVariant">@color/trello_black</item>
        <item name="colorOnPrimary">@color/trello_black</item>

        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="Theme.Trello" parent="Base.Theme.Trello" />

    <style name="NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:navigationBarColor">@color/trello_black</item>
        <item name="android:statusBarColor">@color/trello_black</item>

        <item name="colorPrimary">@color/trello_black</item>
        <item name="colorPrimaryVariant">@color/trello_black</item>
        <item name="colorOnPrimary">@color/trello_black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>